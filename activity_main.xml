<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.calculator.MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7271A0D6"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="183dp"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/Divide"
                app:srcCompat="@drawable/maths" />

            <EditText
                android:id="@+id/etFirstValue"
                android:layout_width="276dp"
                android:layout_height="58dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:autofillHints="enabled"
                android:ems="10"
                android:hint="@string/enter_value"
                android:inputType="number" />

            <EditText
                android:id="@+id/etSecondValue"
                android:layout_width="275dp"
                android:layout_height="59dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:autofillHints="enabled"
                android:ems="10"
                android:hint="@string/enter_value2"
                android:inputType="number" />

            <TextView
                android:id="@+id/tvAns"
                android:layout_width="340dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="117dp"
                android:layout_height="114dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#3F51B5"
                android:text="@string/plus"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="115dp"
                android:layout_height="114dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#03A9F4"
                android:text="@string/sub"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="117dp"
                android:layout_height="114dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#3F51B5"
                android:text="@string/multi"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btndiv"
                android:layout_width="117dp"
                android:layout_height="114dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#03A9F4"
                android:text="@string/Divide"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
